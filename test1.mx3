// Cell size
c := 10e-9
cz := 25e-9

SetGridsize(100,100,4)
SetCellsize(c,c,cz)

// Permalloy parameters
Msat  = 800e3
Aex   = 13e-12
alpha = 0.1
EdgeSmooth = 8

// magnet definitions
system := universe().sub(universe())

rect1 := cuboid(400e-9,100e-9,cz)
top := rect1.transl(0,200e-9,0)
bottom := rect1.transl(0,-200e-9,0)
system = system.add(top).add(bottom)

setgeom(system)
snapshot(geom)

m = uniform(1, .1, 0) // uniform field in (x,y,z)
relax()    // slower but robust for large changes
save(m)    // relaxed state

autosave(m, 200e-12) // saves space-dependent quantity m every 200e-12s
tableautosave(10e-12) // save data table every 10e-12s

B_ext = vector(-24.6E-3, 4.3E-3, 0) // Overwrite external magnetic
run(1e-9) // run sim for 1e-9s
