// Cell size
c := 25e-9
cz := 50e-9

SetGridsize(100,100,2)
SetCellsize(c,c,cz)

// Permalloy parameters
Msat  = 800e3
Aex   = 13e-12
alpha = 0.1
EdgeSmooth = 8

// magnet definitions
system := universe().sub(universe())

rect1 := cuboid(5e-6,500e-9,cz)
top := rect1.transl(0,200e-9,0)
bottom := rect1.transl(0,-200e-9,0)
system = system.add(top).add(bottom)

setgeom(system)
snapshot(geom)
saveas(geom,"geometry.ovf")

// this can be opened with regions.loadfile("__.out/geometry.ovf")
