// Cell size
c := 25e-9
cz := 25e-9
width := 1.3e-6
height := 5e-6
gap := 6.85e-6

SetGridsize(800,1200,4)
SetCellsize(c,c,cz)

// Permalloy parameters
Msat  = 800e3
Aex   = 13e-12
alpha = 0.1
EdgeSmooth = 8

// magnet definitions
system := universe().sub(universe())

rect1 := cuboid(width,height,4*cz)
top := rect1.transl(0,(height+gap)/2,0)
bottom := rect1.transl(0,-(height+gap)/2,0)
system = system.add(top).add(bottom)

setgeom(system)
snapshot(geom)
saveas(geom,"v2.ovf")
